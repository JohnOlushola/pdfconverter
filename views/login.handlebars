<div class="container form-container contact-form w-75">
    <form class="form" method="POST" action="/">
        <h1>Login</h1>
        <p>Enter your email and your password</p>
        <input type="email" placeholder="Email" name="email" class="form-input email" autocomplete="off">

        <input type="password" placeholder="Password" name="password" class="form-input password">
        <button type="submit" class="btn btn-right">Login</button>
    </form>
</div>